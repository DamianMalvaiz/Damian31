# .env — Variables de entorno para Media Management System
# =========================================================

# ---------- APLICACIÓN ----------
APP_NAME=Media Management System
APP_VERSION=2.0.0
DEBUG=false

# ---------- BASE DE DATOS ----------
# MongoDB
MONGO_URI=mongodb://127.0.0.1:27017
MONGO_DB=media_management
MONGO_TIMEOUT=4000

# Colecciones
CUSTOMERS_COLLECTION=customers
VIDEOS_COLLECTION=videos
IMAGES_COLLECTION=images
AUDIO_COLLECTION=audio

# GridFS
GRIDFS_BUCKET=media_files

# Spark
USE_SPARK=true
SPARK_APP_NAME=media-management-spark
SPARK_MASTER=local[*]
SPARK_READ_LIMIT=200000

# ---------- MULTIMEDIA ----------
# Límites de archivos (MB)
MAX_VIDEO_SIZE_MB=500
MAX_IMAGE_SIZE_MB=50
MAX_AUDIO_SIZE_MB=100

# Calidad de optimización
IMAGE_OPTIMIZE_QUALITY=85

# Directorios
DATA_DIR=./data

# ---------- UI Y PAGINACIÓN ----------
PAGE_SIZE=25
DEFAULT_ORDER_COL=id
DEFAULT_ORDER_DIR=asc

# ---------- FEATURES ----------
ENABLE_ANALYTICS=true
ENABLE_MEDIA=true
ENABLE_EXTERNAL_APIS=true

# ---------- ANALYTICS ----------
ANALYTICS_CORR_METHOD=pearson
ROLLING_DEFAULT_WINDOW=6
EMA_DEFAULT_SPAN=6
OUTLIER_Z_THRESHOLD=3.0
OUTLIER_IQR_K=1.5
TIME_GROUPING_FREQ=M
ANALYTICS_MAX_ROWS=500000
CACHE_TTL_SECONDS=600

# ---------- AUTENTICACIÓN ----------
# Hash SHA256 de "Hola123" (cambiar en producción)
PASSWORD_HASH=8d969eef6ecad3c29a3a629280e686cf0c3f5d5a86aff3ca12020c923adc6c92
SESSION_TIMEOUT_HOURS=8
REMEMBER_ME_DAYS=30

# ---------- APIs EXTERNAS ----------
# YouTube Data API v3 (obtener en: https://console.developers.google.com/)
YOUTUBE_API_KEY=
YOUTUBE_MAX_RESULTS=50

# Pexels API (obtener en: https://www.pexels.com/api/)
PEXELS_API_KEY=
PEXELS_MAX_RESULTS=50

# Unsplash API (obtener en: https://unsplash.com/developers)
UNSPLASH_ACCESS_KEY=
UNSPLASH_MAX_RESULTS=50

# Pixabay API (obtener en: https://pixabay.com/api/docs/)
PIXABAY_API_KEY=
PIXABAY_MAX_RESULTS=50

# Rate limiting
API_RATE_LIMIT_PER_MINUTE=60

# ---------- TEMA Y UI ----------
DEFAULT_THEME=dark
PRIMARY_COLOR=#3b82f6
SECONDARY_COLOR=#8b5cf6
ACCENT_COLOR=#06d6a0
ENABLE_ANIMATIONS=true
ANIMATION_DURATION=0.3s