# .env — variables de entorno para la app

# ---------- Spark & Mongo ----------
USE_SPARK=true
USE_SPARK_MONGO=true
USE_MONGO_PIPELINE=true          # usa $convert en el pipeline para forzar tipos
SPARK_READ_LIMIT=200000          # 0 = sin límite (ojo RAM si tienes 3M+ filas)

# ---------- Archivos CSV ----------
DATA_DIR=./data
CSV_FILE=people-1000000.csv

# ---------- MongoDB ----------
MONGO_URI=mongodb://127.0.0.1:27017
MONGO_DB=cruddb
MONGO_COLL=customers
DISABLE_MONGO=false              # true = ignora Mongo y trabaja solo con CSV
ENABLE_MONGO_SYNC=true           # permite upsert/delete a Mongo desde la UI

# ---------- UI / Analytics (coinciden con settings.py; opcional) ----------
PAGE_SIZE=25
DEFAULT_ORDER_COL=id
DEFAULT_ORDER_DIR=asc
ENABLE_ANALYTICS=true
ANALYTICS_CORR_METHOD=pearson
ROLLING_DEFAULT_WINDOW=6
EMA_DEFAULT_SPAN=6
OUTLIER_Z_THRESHOLD=3
OUTLIER_IQR_K=1.5
QUANTILE_BUCKETS=10
TIME_GROUPING_FREQ=M
CACHE_TTL_SECONDS=600
ANALYTICS_MAX_ROWS=500000

MAX_PANDAS_ROWS=300000
SPARK_READ_LIMIT=200000
ENABLE_ANALYTICS=true
ENABLE_MONGO_SYNC=true
